@using ChessGameClient.Models;
@using ChessGame
@inject SiteUserInfo user
@implements IChessObserver
@implements IDisposable

<div class="top-row">
    <div class="menu-word">Pretty Chess</div>
    <div class="login-menu">
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span>Menu</span>
        </button>
        @if (user.Id > 0)
        {
            <NavLink class="btn btn-primary" href="logout">Sign Out</NavLink>
        }
        else
        {
            <NavLink class="btn btn-primary" href="authorization/auth">Sign In</NavLink>
            <NavLink class="btn btn-primary" href="authorization/reg">Sign Up</NavLink>
        }
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav>
        <div class="nav-item">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi"></span> Home
            </NavLink>
        </div>

        @if (user.Roles.Contains("user"))
        {
            <div class="nav-item">
                <NavLink class="nav-link" href="game">
                    <span class="oi"></span> Game
                </NavLink>
            </div>
        }

        @if (user.Roles.Contains("admin"))
        {
            <div class="nav-item">
                <NavLink class="nav-link" href="adminpanel">
                    <span class="oi"></span> Admin Panel
                </NavLink>
            </div>
        }

    </nav>
</div>


@code {
    
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    
    protected override void OnInitialized()
    {
        ((IChessObservable)user).Subscribe(this);
    }
    
    public Task UpdateAsync()
    {
        StateHasChanged();
        
        return Task.CompletedTask;
    }

    public void Dispose()
    {
        ((IChessObservable)user).Remove(this);
    }
}
