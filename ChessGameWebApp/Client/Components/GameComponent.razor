@using ChessGame
@inject HttpClient Http
@inherits GameComponentModel

<h3>GameComponent</h3>


@code {

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await webApi.Update(Board);
            Update();
        }
        catch (Exception ex)
        {

        }
    }

}

<table class="ChessBoard" id="board">

    @for (int i = 0; i < 8; i++)
    {
        <tr>
            @for (int j = 0; j < 8; j++)
            {
                <CellComponent Row="@i" Column="@j" ParentComponent="@this"></CellComponent>
            }
        </tr>
    }
</table>
