@using ChessGame
@inject HttpClient Http
@inherits GameComponentModel

<h3>GameComponent</h3>


@code {

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Board = await Http.GetFromJsonAsync<BoardViewModel>("chessgame/board");
        }
        catch (Exception ex)
        {

        }
    }

    [Parameter]
    public EventCallback OnClickCallback { get; set; }

    private void Click1()
    {
         StateHasChanged();
    }

}

<table class="ChessBoard" id="board" onclick="@Click1">

    @for (int i = 0; i < 8; i++)
    {
        <tr>
            @for (int j = 0; j < 8; j++)
            {
                <CellComponent IsMarked = "false" Row="@i" Column="@j" Figure="@Board?[i, j]"></CellComponent>
            }
        </tr>
    }
</table>
