@using ChessGame
@inject HttpClient Http
@inherits GameComponentModel

<h3>GameComponent</h3>


@code {
    
    protected override async Task OnInitializedAsync()
    {
        try
        {
            board = await Http.GetFromJsonAsync<Board>("chessgame/board");
        }
        catch (Exception ex)
        {

        }
    }

    private void Click(int row, int column)
    {

        StateHasChanged();
    }

}

<table class="ChessBoard" id="board">

    @for (int i = 0; i < 8; i++)
    {
        <tr>
            @for (int j = 0; j < 8; j++)
            {
                <td class="@(i % 2 == j % 2 ? "white" : "black")">
                    @if (board[i, j] != null)
                    {
                        string str = $"/css/icons/Black{board[i, j]}.png";
                        <img src="@str"  alt="" />
                    }
                </td>
            }
        </tr>
    }
</table>
